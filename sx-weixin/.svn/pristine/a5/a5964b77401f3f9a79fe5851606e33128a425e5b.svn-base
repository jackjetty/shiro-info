@charset "utf-8";
/* CSS Document */
*{
	padding:0;
	margin:0;
}
a{
	text-decoration:none;
}
li{
	list-style:none;
}
body{
	background-color:#f5f5f9;
}
.page{
}
.page .list{
	margin-top:8px;
}
.page .list .check{
	background-color:white;
	border-top:1px solid #e5e5e5;
	border-bottom:1px solid #e5e5e5;
	overflow:hidden;
	padding:8px 15px;
}
.page .list .check span{
	color:#333333;
	line-height:24px;
	font-size:14px;
	font-family:'微软雅黑';
	float:left;
	display:block;
	font-weight:bold;
}
.page .list .check .text{
	width:70%;
	float:right;
}
.page .list .check .text b{
	color:#757575;
	line-height:24px;
	font-size:14px;
	font-family:'微软雅黑';
	text-align:right;
	font-weight:normal;
	display:block;
}
.page .information{
	margin-top:8px;
}
.page .information .box{
	background-color:white;
	border-top:1px solid #e5e5e5;
	border-bottom:1px solid #e5e5e5;
}
.page .information .box .box1{
	border-bottom:1px solid #e5e5e5;
	overflow:hidden;
	padding:8px 15px 8px 0;
	margin-left:15px;
}
.page .information .box1 span{
	color:#333333;
	line-height:32px;
	font-size:14px;
	font-family:'微软雅黑';
	float:left;
	display:block;
	font-weight:bold;
}
.page .information .box1  input{
	width:60%;
	float:right;
	height:32px;
	border:0;
	box-sizing:border-box;
	background-color:transparent;
	-webkit-appearance: none;
	color:#757575;
	line-height:32px;
	font-size:14px;
	font-family:'微软雅黑';
	text-align:right;
	-webkit-tap-highlight-color:transparent;
}
.page .information .box1 .select{
	width:60%;
	float:right;
	background:url(/hzxstraffic/wei/images/traffic/down.png) no-repeat right center;
	background-size:16px 16px;
}
.page .information .box1 .select select{
	height:32px;
	border:0;
	display:block;
	width:100%;
	box-sizing:border-box;
	background-color:transparent;
	-webkit-appearance: none;
	color:#aeaeae;
	line-height:32px;
	font-size:14px;
	font-family:'微软雅黑';
	text-align:right;
	vertical-align:middle;
	-webkit-tap-highlight-color:transparent;
	padding-right:26px;
}
.page .information .box1 .select select option{
	text-align:right;
}

.page .submit{
	display:block;
	line-height:40px;
	color:white;
	text-align:center;
	font-size:16px;
	font-family:'微软雅黑';
	background-color:#237AEE;
	margin:20px 15px;
	border-radius:3px;
	-o-border-radius:3px;
	-moz-border-radius:3px;
	-ms-border-radius:3px;
	-webkit-border-radius:3px;
}
.tip{
	background-color:#7e7f81;
	padding:5px 15px;
	display: none;
}
.tip span{
	color:white;
	line-height:14px;
	font-size:12px;
	font-family:'微软雅黑';
}